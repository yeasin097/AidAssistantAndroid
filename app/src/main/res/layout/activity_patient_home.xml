<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Patient_home"
    android:background="#fafafa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#daf3f0"
        android:weightSum="4">
        <ImageView
            android:layout_width="162sp"
            android:layout_height="162sp"
            android:src="@drawable/cartoon"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="162sp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60sp"
                android:text="Md.Yeasin"
                android:padding="10sp"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#0c4453"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="34sp"
                android:text="User ID: 1904097"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#0c4453"
                android:paddingStart="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="34sp"
                android:textColor="#0c4453"
                android:text="Age: 23"
                android:textSize="25sp"
                android:paddingStart="10sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="34sp"
                android:textColor="#0c4453"
                android:text="BMI: 24"
                android:textSize="25sp"
                android:paddingStart="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300sp">

        <ImageButton
            android:id="@+id/image_b1"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:src="@drawable/medicine"
            android:scaleType="fitCenter"
            android:background="#daf3f0"
            android:text="Ongoing Medicine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/image_b4"
            app:layout_constraintEnd_toStartOf="@id/image_b2"
            android:layout_margin="5sp"/>
        <ImageButton
            android:id="@+id/image_b2"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:src="@drawable/medicinelist"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="@id/image_b3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/image_b5"
            app:layout_constraintStart_toEndOf="@id/image_b1"
            android:layout_margin="5sp"/>

        <ImageButton
            android:id="@+id/image_b3"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:src="@drawable/editprofile_2"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_b2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/image_b6"
            android:layout_margin="5sp"/>
        <ImageButton
            android:id="@+id/image_b4"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:src="@drawable/viewprofile"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@id/image_b5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_b1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="5sp"
            />

        <ImageButton
            android:id="@+id/image_b5"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:src="@drawable/search"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@id/image_b4"
            app:layout_constraintTop_toBottomOf="@id/image_b2"
            app:layout_constraintEnd_toStartOf="@id/image_b6"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="5sp"/>
        <ImageButton
            android:id="@+id/image_b6"
            android:layout_width="0sp"
            android:layout_height="0sp"
            android:src="@drawable/logout"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_b3"
            app:layout_constraintStart_toEndOf="@id/image_b5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="5sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>