<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup_doctor"
    android:background="@drawable/doc_b">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signuptext"
            android:text="Doctor Signup"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:padding="10sp"
            android:layout_marginTop="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signupname"
            android:layout_margin="10sp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/doctor_signuptext"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signuppassword"
            android:layout_margin="10sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/doctor_signupname"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signuprepassword"
            android:layout_margin="10sp"
            android:hint="Retype Password"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/doctor_signuppassword"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signupPhone"
            android:layout_margin="10sp"
            android:hint="Phone"
            android:inputType="number"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/doctor_signuprepassword"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signupemail"
            android:layout_margin="10sp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/doctor_signupPhone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signupBMDC"
            android:layout_margin="10sp"
            android:hint="BMDC No"
            android:inputType="number"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/doctor_signupemail"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signupverify"
            android:layout_margin="10sp"
            android:hint="Verifing Code"
            android:inputType="number"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/doctor_signupBMDC"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signupSpecial"
            android:layout_margin="10sp"
            android:hint="Speciality"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/doctor_signupverify"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signupAddress"
            android:layout_margin="10sp"
            android:hint="Address"
            android:textSize="20sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/doctor_signupSpecial"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doctor_signupDOB"
            android:layout_margin="10sp"
            android:hint="Date of Birth"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="5sp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/doctor_signupAddress"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/doctor_signupDOB"
            android:id="@+id/doctor_signupgender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10sp" />





        <Button
            android:id="@+id/doctor_signupsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#0c4453"
            android:text="Submit"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctor_signupgender"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>